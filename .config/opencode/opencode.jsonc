{
  "$schema": "https://opencode.ai/config.json",
  "theme": "neovim",
  "keybinds": {
    "leader": "ctrl+o",
    "app_exit": "ctrl+c",
    "session_list": "<leader>+shift+l",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_last_user": "<leader>l",
    "messages_first": "<leader>f"
  },
  "agent": {
    // "build": { "disable": true },
    "plan": {
      "mode": "primary",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git diff": "allow",
      "git status": "allow"
    }
  }
}
